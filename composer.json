{
    "name": "arvenil/ninja-mutex",
    "description": "Simple to use mutex implementation that can use flock, memcache, memcached, mysql or redis for locking",
    "homepage" : "https://github.com/arvenil/ninja-mutex",
    "keywords" : ["mutex", "lock", "locking", "flock", "memcache", "memcached", "mysql", "redis"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Dziedzic",
            "email": "arvenil@klecza.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "NinjaMutex\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NinjaMutex\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.5 || ^5.6 || ^5.7 || ^9",
        "scrutinizer/ocular": "^1.1 || ^1.3 || ^1.4 || ^1.8",
        "mikey179/vfsstream": "^1.4 || ^1.5 || ^1.6",
        "predis/predis": "^1.0 || ^1.1",
        "ext-memcache": "*",
        "ext-memcached": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*"
    },
    "suggest" : {
        "predis/predis" : "Create mutex using Predis (client library for Redis)",
        "ext-memcache": "Create mutex using memcache extension",
        "ext-memcached": "Create mutex using memcached extension",
        "ext-pdo_mysql": "Create mutex using MySQL PDO"
    }
}
